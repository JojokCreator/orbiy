---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import Button from "../components/reusable/Button.astro";

const title = "Form Submission Error";
const description =
  "There was an error submitting your form. Please try again or contact us directly.";
---

<Layout title={title} description={description} invertMenu={true}>
  <section
    class="vertical-p min-h-screen flex items-center justify-center bg-white"
  >
    <div class="site-container text-center">
      <div class="max-w-2xl mx-auto">
        <!-- Error Icon -->
        <div class="mb-8">
          <div
            class="w-20 h-20 bg-red-light rounded-full flex items-center justify-center mx-auto"
          >
            <Icon name="close" class="w-10 h-10 text-white" />
          </div>
        </div>

        <!-- Error Message -->
        <h1 class="text-4xl md:text-5xl font-bold text-black mb-6">
          Oops! Something Went Wrong
        </h1>

        <p class="text-lg md:text-xl text-gray mb-8">
          We apologize, but there was an error submitting your message. Please
          try again or contact us directly using the information below.
        </p>
        <!-- Contact Info -->
        <div class="bg-light-gray rounded-lg p-6 mb-8">
          <p class="text-gray mb-4">Contact us directly:</p>
          <div class="flex justify-center">
            <a
              href="mailto:hello@orbiy.com"
              class="text-black hover:text-green font-medium"
            >
              hello@orbiy.com
            </a>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button buttonText="Try Again" link="/contact" type="gray" />
          <Button
            buttonText="Back to Home"
            link="/"
            type="outline"
            class="border-black text-black hover:bg-black hover:text-white"
          />
        </div>

        <!-- Additional Info -->
        <div class="mt-12 text-sm text-gray-500">
          <p>
            If the problem persists, please screenshot this page and send it to
            our support team.
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>
