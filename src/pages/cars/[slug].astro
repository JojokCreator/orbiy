---
import { getCollection, getEntry } from 'astro:content';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';
import Button from '../../components/reusable/Button.astro';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const cars = await getCollection('cars');
  return cars.map((car) => ({
    params: { slug: car.id },
    props: { car },
  }));
}

interface Props {
  car: CollectionEntry<'cars'>;
}

const { car } = Astro.props;

// Get related cars (excluding current car, limit to 3)
const allCars = await getCollection('cars');
const relatedCars = allCars
  .filter((c) => c.id !== car.id)
  .slice(0, 3);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{car.data.title} - {car.data.brand} {car.data.model}</title>
  <meta name="description" content={car.data.description} />
</head>
<body>
  <!-- Hero Section -->
  <section class="relative h-screen overflow-hidden">
    {car.data.image.src ? (
      <img
        src={car.data.image.src}
        alt={car.data.image.alt}
        class="w-full h-full object-cover"
      />
    ) : (
      <div class="w-full h-full bg-gray-200"></div>
    )}

    <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/60 to-black/80"></div>

    <div class="relative z-10 h-full flex items-center justify-center">
      <div class="text-center text-white px-4">
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-4">
          {car.data.title}
        </h1>
        <p class="text-xl md:text-2xl mb-8 opacity-90">
          {car.data.brand} {car.data.model}
        </p>
        <p class="text-3xl md:text-4xl font-bold mb-8">
          {car.data.price}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button
            type="filled"
            buttonText="Request a Quote"
            link={`/quote?car=${car.id}`}
            arrow={true}
          />
          <Button
            type="outline"
            buttonText="Schedule Test Drive"
            link={`/test-drive?car=${car.id}`}
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Vehicle Details -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">

        <!-- Left Column - Description -->
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">
            Experience Excellence
          </h2>
          <div class="prose prose-lg text-gray-600">
            {car.content}
          </div>

          <!-- Key Features -->
          <div class="mt-12">
            <h3 class="text-xl font-bold text-gray-900 mb-6">Key Features</h3>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              {car.data.features.map((feature) => (
                <div class="flex items-center space-x-3">
                  <div class="w-2 h-2 bg-primary rounded-full flex-shrink-0"></div>
                  <span class="text-gray-700">{feature}</span>
                </div>
              ))}
            </div>
          </div>
        </div>

        <!-- Right Column - Specifications -->
        <div>
          <h3 class="text-2xl font-bold text-gray-900 mb-8">Technical Specifications</h3>
          <div class="space-y-6">
            <div class="border-b border-gray-200 pb-6">
              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center space-x-3">
                  <Icon name="engine" class="w-5 h-5 text-gray-400" />
                  <span class="font-medium text-gray-900">Engine</span>
                </div>
                <span class="text-gray-600">{car.data.specifications.engine}</span>
              </div>

              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center space-x-3">
                  <Icon name="power" class="w-5 h-5 text-gray-400" />
                  <span class="font-medium text-gray-900">Power</span>
                </div>
                <span class="text-gray-600">{car.data.specifications.power}</span>
              </div>

              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center space-x-3">
                  <Icon name="speed" class="w-5 h-5 text-gray-400" />
                  <span class="font-medium text-gray-900">Acceleration</span>
                </div>
                <span class="text-gray-600">{car.data.specifications.acceleration}</span>
              </div>
            </div>

            <div class="border-b border-gray-200 pb-6">
              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center space-x-3">
                  <Icon name="topspeed" class="w-5 h-5 text-gray-400" />
                  <span class="font-medium text-gray-900">Top Speed</span>
                </div>
                <span class="text-gray-600">{car.data.specifications.topSpeed}</span>
              </div>

              <div class="flex items-center justify-between mb-4">
                <div class="flex items-center space-x-3">
                  <Icon name="transmission" class="w-5 h-5 text-gray-400" />
                  <span class="font-medium text-gray-900">Transmission</span>
                </div>
                <span class="text-gray-600">{car.data.specifications.transmission}</span>
              </div>

              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                  <Icon name="fuel" class="w-5 h-5 text-gray-400" />
                  <span class="font-medium text-gray-900">Fuel Type</span>
                </div>
                <span class="text-gray-600">{car.data.specifications.fuelType}</span>
              </div>
            </div>
          </div>

          <!-- Year Information -->
          <div class="mt-8 p-6 bg-gray-50 rounded-xl">
            <div class="flex items-center justify-between">
              <span class="font-medium text-gray-900">Model Year</span>
              <span class="text-xl font-bold text-primary">{car.data.year}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Vehicles -->
  {relatedCars.length > 0 && (
    <section class="py-16 lg:py-24 bg-gray-50">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Related Vehicles</h2>
          <p class="text-lg text-gray-600">Explore other premium vehicles in our collection</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {relatedCars.map((relatedCar) => (
            <div class="group bg-white rounded-xl shadow-md overflow-hidden transition-all duration-300 hover:shadow-lg hover:-translate-y-1">
              <div class="relative h-48 overflow-hidden">
                {relatedCar.data.image.src ? (
                  <img
                    src={relatedCar.data.image.src}
                    alt={relatedCar.data.image.alt}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full bg-gray-200 flex items-center justify-center">
                    <span class="text-gray-500">Image Coming Soon</span>
                  </div>
                )}
              </div>

              <div class="p-6">
                <p class="text-sm text-gray-500 mb-1">{relatedCar.data.brand}</p>
                <h3 class="text-lg font-bold text-gray-900 mb-2">{relatedCar.data.title}</h3>
                <p class="text-xl font-bold text-primary mb-4">{relatedCar.data.price}</p>

                <Button
                  type="filled"
                  buttonText="View Details"
                  href={`/cars/${relatedCar.id}`}
                  arrow={true}
                  class="w-full"
                />
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}
</body>
</html>