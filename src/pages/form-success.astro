---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import Button from "../components/reusable/Button.astro";

const title = "Form Submitted Successfully";
const description =
  "Thank you for contacting us. Your message has been sent successfully.";
---

<Layout title={title} description={description} invertMenu={true}>
  <section
    class="vertical-p min-h-screen flex items-center justify-center bg-white"
  >
    <div class="site-container text-center">
      <div class="max-w-2xl mx-auto">
        <!-- Success Icon -->
        <div class="mb-8">
          <div
            class="w-20 h-20 bg-green rounded-full flex items-center justify-center mx-auto"
          >
            <Icon name="tick" class="w-10 h-10 text-white" />
          </div>
        </div>

        <!-- Success Message -->
        <h1 class="text-4xl md:text-5xl font-bold text-black mb-6">
          Message Sent Successfully!
        </h1>

        <p class="text-lg md:text-xl text-gray mb-8">
          Thank you for contacting us. We've received your message and will get
          back to you as soon as possible.
        </p>

        <!-- Contact Info -->
        <div class="bg-light-gray rounded-lg p-6 mb-8">
          <p class="text-gray mb-4">
            In the meantime, feel free to reach out to us directly:
          </p>
          <div class="flex justify-center">
            <a
              href="mailto:hello@orbiy.com"
              class="text-black hover:text-green font-medium"
            >
              hello@orbiy.com
            </a>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button buttonText="Back to Home" link="/" type="gray" />
          <Button
            buttonText="Send Another Message"
            link="/contact"
            type="outline"
            class="border-black text-black hover:bg-black hover:text-white"
          />
        </div>

        <!-- Additional Info -->
        <div class="mt-12 text-sm text-gray">
          <p>You should receive a confirmation email shortly.</p>
          <p class="mt-2 text-xs">
            If you don't hear back from us within 24 hours, please check your
            spam folder or contact us directly.
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>
