---
import { storyblokEditable } from "@storyblok/astro";

const { blok } = Astro.props;
const { component } = blok;
---

<div
  {...storyblokEditable(blok)}
  class="min-h-screen flex items-center justify-center bg-gray-50 px-4"
>
  <div class="text-center max-w-md">
    <div class="mb-8">
      <!-- <Icon name="alert-circle" class="w-16 h-16 mx-auto text-gray-400" /> -->
    </div>

    {
      component === "site-config" ? (
        <>
          <h1 class="text-3xl font-bold text-gray-900 mb-4">
            Site Configuration
          </h1>
          <p class="text-gray-600 mb-8">
            This is site configuration data, not a page component. It's used to
            store global settings like navigation, footer content, and site
            metadata.
          </p>
          <div class="space-y-4">
            <p class="text-sm text-gray-500">This data is used by:</p>
            <ul class="text-left text-sm text-gray-500 space-y-1 list-disc list-inside">
              <li>Navigation bar for menu items and logo</li>
              <li>Footer for contact info and links</li>
              <li>Global site settings and branding</li>
            </ul>
          </div>
        </>
      ) : (
        <>
          <h1 class="text-3xl font-bold text-gray-900 mb-4">
            Component Not Found
          </h1>

          <p class="text-gray-600 mb-8">
            Sorry, we couldn't find the component you're looking for. The
            component
            <span class="font-mono bg-gray-100 px-2 py-1 rounded">
              {component}
            </span>{" "}
            is not available or hasn't been configured yet.
          </p>

          <div class="space-y-4">
            <p class="text-sm text-gray-500">This could happen if:</p>
            <ul class="text-left text-sm text-gray-500 space-y-1 list-disc list-inside">
              <li>The component hasn't been created yet</li>
              <li>The Storyblok configuration needs updating</li>
              <li>The component name doesn't match the file name</li>
              <li>There's an issue with the site configuration</li>
            </ul>
          </div>
        </>
      )
    }

    {
      component !== "site-config" && (
        <div class="mt-8 pt-8 border-t border-gray-200">
          <p class="text-xs text-gray-400 mb-4">Debug Information:</p>
          <div class="text-xs text-gray-500 font-mono bg-gray-100 p-3 rounded">
            <p>Component: {component || "Unknown"}</p>
            <p>Blok Data: {Object.keys(blok).join(", ") || "No data"}</p>
            <p>URL: {Astro.url.pathname}</p>
          </div>
        </div>
      )
    }

    <div class="mt-8">
      <a
        href="/"
        class="inline-flex items-center px-6 py-3 bg-gray-900 text-white font-medium rounded-lg hover:bg-gray-800 transition-colors"
      >
        Go Home
      </a>
    </div>
  </div>
</div>
