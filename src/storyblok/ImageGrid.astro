---
import { storyblokEditable } from "@storyblok/astro";
import { Picture } from "astro:assets";
import { getCollection } from "astro:content";

const { blok } = Astro.props;
const { title, text } = blok;

// Get featured cars from the content collection
const allCars = await getCollection("cars");
const featuredCars = allCars.filter((car) => car.data.featured);
---

<section {...storyblokEditable(blok)} class="vertical-p bg-red w-screen">
  <div class="site-container">
    <div>
      <h2 class="text-white">
        {title}
      </h2>

      {text && <p class="text-blue-gray mt-4">{text}</p>}
      <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-12">
        {
          featuredCars[0] && (
            <div class="md:hidden group relative overflow-hidden rounded-2xl shadow-lg">
              <Picture
                src={featuredCars[0].data.horizontalImage}
                formats={["avif", "webp"]}
                alt={
                  featuredCars[0].data.imageAlt || featuredCars[0].data.title
                }
                widths={[400, 600, 800]}
                sizes="(max-width: 768px) 100vw, 400px"
                inferSize={true}
                class="w-full h-full object-contain transition-transform duration-500 group-hover:scale-[1.01]"
              />

              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-60 group-hover:opacity-80 transition-opacity duration-300" />
              <div class="absolute bottom-0 left-0 right-0 p-6">
                <h3 class="text-white font-medium text-lg mb-2 leading-tight">
                  {featuredCars[0].data.title}
                </h3>
                <p class="text-white text-base line-clamp-2 leading-relaxed hidden sm:block ">
                  {featuredCars[0].data.description}
                </p>
                {featuredCars[0].data.price && (
                  <p class="text-white font-semibold text-base mt-3">
                    {featuredCars[0].data.price}
                  </p>
                )}
              </div>

              <div class="absolute inset-0 border-2 border-white/0 group-hover:border-white/20 transition-all duration-300 rounded-2xl" />
            </div>
          )
        }

        {
          featuredCars[0] && (
            <div class="hidden md:block group relative overflow-hidden rounded-2xl shadow-lg">
              <Picture
                src={featuredCars[0].data.verticalImage}
                formats={["avif", "webp"]}
                alt={
                  featuredCars[0].data.imageAlt || featuredCars[0].data.title
                }
                widths={[400, 605, 800]}
                sizes="(max-width: 1024px) 50vw, 400px"
                inferSize={true}
                class="w-full h-full object-contain transition-transform duration-500 group-hover:scale-[1.01]"
              />

              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-60 group-hover:opacity-80 transition-opacity duration-300" />
              <div class="absolute bottom-0 left-0 right-0 p-6">
                <h3 class="text-white font-medium text-xl mb-2 leading-tight">
                  {featuredCars[0].data.title}
                </h3>
                <p class="text-white text-base line-clamp-2 leading-relaxed hidden sm:block ">
                  {featuredCars[0].data.description}
                </p>
                {featuredCars[0].data.price && (
                  <p class="text-white font-semibold text-lg mt-3">
                    {featuredCars[0].data.price}
                  </p>
                )}
              </div>

              <div class="absolute inset-0 border-2 border-white/0 group-hover:border-white/20 transition-all duration-300 rounded-2xl" />
            </div>
          )
        }

        <div class="flex flex-col gap-8 lg:gap-8">
          {
            featuredCars.slice(1, 3).map((card) => (
              <div class="group relative overflow-hidden rounded-2xl shadow-lg">
                <Picture
                  src={card.data.horizontalImage}
                  formats={["avif", "webp"]}
                  alt={card.data.imageAlt || card.data.title}
                  widths={[400, 600, 800]}
                  sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 400px"
                  inferSize={true}
                  class="w-full h-full object-contain transition-transform duration-500 group-hover:scale-[1.01]"
                />

                <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-60 group-hover:opacity-80 transition-opacity duration-300" />

                <div class="absolute bottom-0 left-0 right-0 p-6">
                  <h3 class="text-white font-medium text-lg mb-2 leading-tight">
                    {card.data.title}
                  </h3>
                  <p class="text-white text-base line-clamp-2 leading-relaxed hidden sm:block ">
                    {card.data.description}
                  </p>
                  {card.data.price && (
                    <p class="text-white font-semibold text-base mt-3">
                      {card.data.price}
                    </p>
                  )}
                </div>

                <div class="absolute inset-0 border-2 border-white/0 group-hover:border-white/20 transition-all duration-300 rounded-2xl" />
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
