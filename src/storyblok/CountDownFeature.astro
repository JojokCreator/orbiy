---
import { storyblokEditable } from "@storyblok/astro";

const { blok } = Astro.props;
const { title, description } = blok;
---

<div
  {...storyblokEditable(blok)}
  class="flex-1 px-4 sm:px-6 md:px-8 lg:px-12 text-center"
>
  <div class="space-y-3 sm:space-y-4">
    {
      title && (
        <h3 class="text-lg sm:text-xl font-semibold text-white leading-tight">
          {title}
        </h3>
      )
    }

    {
      description && (
        <p class="text-white/80 text-sm sm:text-base md:text-lg leading-relaxed px-2 sm:px-0">
          {description}
        </p>
      )
    }
  </div>
</div>
