<div class="h-screen w-screen overflow-hidden">
	<div class="relative h-full w-full">
		<video id="heroVideo" class="h-full w-full object-cover" muted autoplay loop playsinline>
			<source src="/vid-m.mp4" type="video/mp4" media="(max-width: 640px)" />
			<source src="/vid.mp4" type="video/mp4" />
			Your browser does not support the video tag.
		</video>
		<div class="absolute right-6 bottom-4 z-10 flex gap-4">
			<button
				id="playPauseBtn"
				class="flex h-15 w-15 cursor-pointer items-center justify-center rounded-full bg-black/70 text-2xl text-white backdrop-blur-md transition-all duration-300 hover:scale-110 hover:bg-black/90 active:scale-95"
				aria-label="Play/Pause video"
			>
				<span id="playPauseIcon">⏸</span>
			</button>

			<button
				id="muteBtn"
				class="flex h-15 w-15 cursor-pointer items-center justify-center rounded-full bg-black/70 text-2xl text-white backdrop-blur-md transition-all duration-300 hover:scale-110 hover:hover:bg-black/90 active:scale-95"
				aria-label="Mute/Unmute video"
			>
				<span id="muteIcon">🔇</span>
			</button>
		</div>
		<div
			class="pointer-events-none absolute bottom-44 left-12 flex items-center justify-start p-12"
		>
			<div class="text-white">
				<h1 class="mb-4 text-3xl font-normal drop-shadow-2xl md:text-5xl">Secure More Funding</h1>
				<div class="my-6 h-[3px] w-20 bg-white"></div>
				<p class="mx-auto max-w-2xl text-xl drop-shadow-lg md:text-2xl">
					Successfully secure grant and venture funding with a stunning explainer video about your
					research. It will instantly become your best communication weapon.
				</p>
			</div>
		</div>
	</div>
</div>

<script>
	const video = document.getElementById("heroVideo") as HTMLVideoElement;
	const playPauseBtn = document.getElementById("playPauseBtn") as HTMLButtonElement;
	const playPauseIcon = document.getElementById("playPauseIcon") as HTMLSpanElement;
	const muteBtn = document.getElementById("muteBtn") as HTMLButtonElement;
	const muteIcon = document.getElementById("muteIcon") as HTMLSpanElement;

	// Play/Pause functionality
	playPauseBtn.addEventListener("click", () => {
		if (video.paused) {
			video.play();
			playPauseIcon.textContent = "⏸";
		} else {
			video.pause();
			playPauseIcon.textContent = "▶";
		}
	});

	// Mute/Unmute functionality
	muteBtn.addEventListener("click", () => {
		if (video.muted) {
			video.muted = false;
			muteIcon.textContent = "🔊";
		} else {
			video.muted = true;
			muteIcon.textContent = "🔇";
		}
	});

	// Update play button when video ends
	video.addEventListener("ended", () => {
		playPauseIcon.textContent = "▶";
	});
</script>
