---
import { type CollectionEntry } from "astro:content";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

interface Props {
  car: CollectionEntry<"cars">;
}

const { car } = Astro.props;
---

<div
  class="bg-base-100/50 rounded-sm border-base-300 hover:shadow-xs transition-all duration-600 hover:-translate-y-0.5"
>
  <!-- Car Image -->
  <div class="relative h-fit mb-6 rounded-t-lg overflow-hidden bg-gray-100">
    {
      car.data.horizontalImage ? (
        <Image
          src={car.data.horizontalImage}
          alt={car.data.imageAlt}
          class="w-full h-auto object-contain"
        />
      ) : (
        <div class="w-full h-full bg-gray-200 flex items-center justify-center aspect-video min-h-52">
          <span class="text-gray-500">Image Coming Soon</span>
        </div>
      )
    }
  </div>
  <div class="space-y-3 p-6">
    <h3 class="text-xl md:text-2xl font-semibold text-neutral leading-tight">
      {car.data.title}
    </h3>
    <p class="text-neutral text-base line-clamp-3 py-4">
      {car.data.description}
    </p>
    <ul class="space-y-2">
      {
        car.data.features.slice(0, 4).map((feature) => (
          <li>
            <Icon name="tick" class="inline mr-1.5" />
            {feature}
          </li>
        ))
      }
    </ul>
    <p class="text-2xl md:text-3xl font-medium text-neutral py-4">
      <span class="text-base text-base-300">From </span>{car.data.price}<span
        class="text-base text-base-300"
      >
        /day</span
      >
    </p>
  </div>
</div>
