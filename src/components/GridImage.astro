---
import { Picture } from "astro:assets";

interface GridCard {
  title: string;
  price: string;
  image: {
    filename: string;
    alt?: string;
  };
  imageAlt?: string;
  link?: {
    cached_url?: string;
    url?: string;
  };
}

interface Props {
  card: GridCard;
  link?: { cached_url?: string; url?: string };
  isFirst?: boolean;
  isMobile?: boolean;
}

const { card, link, isFirst = false, isMobile = false } = Astro.props;
const { title, price, image, imageAlt} = card;

let assetId;

if (link?.cached_url) {
  const url = link.cached_url;
  const match = url.match(/\/book\/([^?]+)/);
  if (match && match[1]) {
    assetId = match[1];
  }
}

const rentalUrl = `/rental/${assetId}`;
const linkUrl = rentalUrl;

const getImageSrc = () => {
  const baseUrl = image.filename;

  if (isMobile) {
    return `${baseUrl}/m/800x800`;
  }

  if (isFirst) {
    // Use a larger image for the first one to allow flexible sizing
    return `${baseUrl}/m/1200x1480`;
  }

  // 16:9 images for the stacked ones
  return `${baseUrl}/m/1200x675`;
};
---

<a href={linkUrl} class="block">
  <div
    class={`group relative overflow-hidden rounded-2xl shadow-lg h-full ${isFirst && !isMobile ? "" : isMobile ? "aspect-square" : "aspect-[16/9]"}`}
  >
    <Picture
      src={getImageSrc()}
      formats={["avif", "webp"]}
      alt={imageAlt || title}
      widths={[400, 600, 800, 1200]}
      sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 600px"
      inferSize={true}
      class={`w-full h-full transition-transform duration-500 group-hover:scale-[1.01] object-cover`}
    />

    <div
      class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent opacity-60 group-hover:opacity-80 transition-opacity duration-300"
    >
    </div>

    <div class="absolute bottom-0 left-0 right-0 p-6">
      <p class="text-white font-medium text-lg sm:text-xl mb-2 leading-tight">
        {title}
      </p>
      {
        price && (
          <p class="text-white font-semibold text-lg sm:text-xl mt-3">
            Â£{price} <span class="font-normal">/per day</span>
          </p>
        )
      }
    </div>

    <div
      class="absolute inset-0 border-2 border-white/0 group-hover:border-white/20 transition-all duration-300 rounded-2xl"
    >
    </div>
  </div>
</a>
